# Uncomment to profile zsh startup
# zmodload zsh/zprof

export DOTFILES_BASE="$HOME/dotfiles"

source "$DOTFILES_BASE/zsh/oh-my-zsh"

# Load core configs
[[ -r "$DOTFILES_BASE/zsh/env.sh" ]] && source "$DOTFILES_BASE/zsh/env.sh"
[[ -r "$DOTFILES_BASE/zsh/path.sh" ]] && source "$DOTFILES_BASE/zsh/path.sh"

# Load tool configs
for config in "$DOTFILES_BASE/zsh/tools"/*.sh(N); do
  [[ -r "$config" ]] && source "$config"
done

[[ -f ~/.aliases ]] && source ~/.aliases

# Load local overrides (these should override everything else)
[[ -f ~/.zshrc.local ]] && source ~/.zshrc.local
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

# zprof
