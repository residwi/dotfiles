#!/usr/bin/env bash
# System power menu using walker dmenu

set -euo pipefail

OPTIONS="Lock
Suspend
Hibernate
Reboot
Shutdown"

CHOICE=$(echo "$OPTIONS" | walker --dmenu -p "System")

case "$CHOICE" in
  Lock) hyprlock ;;
  Suspend) systemctl suspend ;;
  Hibernate) systemctl hibernate ;;
  Reboot) systemctl reboot ;;
  Shutdown) systemctl poweroff ;;
esac
