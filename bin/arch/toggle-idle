#!/usr/bin/env bash
# Toggle hypridle on/off

set -euo pipefail

if pgrep -x hypridle >/dev/null; then
  pkill -x hypridle
  notify-send "ğŸ”“ Idle lock disabled" "Computer will not lock when idle"
else
  hypridle >/dev/null 2>&1 &
  notify-send "ğŸ”’ Idle lock enabled" "Computer will lock when idle"
fi
